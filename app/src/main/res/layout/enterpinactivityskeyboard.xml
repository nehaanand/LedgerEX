    <LinearLayout
        android:id="@+id/frstll"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etdigit1"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/enterpinedittext"
            android:cursorVisible="false"
            android:gravity="center_vertical|center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="5dp"
            android:textColorHint="#ffffff"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etdigit2"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:background="@drawable/enterpinedittext"
            android:cursorVisible="false"
            android:gravity="center_vertical|center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="5dp"
            android:textColorHint="#ffffff"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etdigit3"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:background="@drawable/enterpinedittext1"
            android:cursorVisible="false"
            android:gravity="center_vertical|center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="5dp"
            android:textColorHint="#ffffff"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etdigit4"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:background="@drawable/enterpinedittext1"
            android:cursorVisible="false"
            android:gravity="center_vertical|center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="5dp"
            android:textColorHint="#ffffff"

            android:textSize="30sp" />
    </LinearLayout>
    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/frstll"
        android:layout_marginTop="25dp"
        android:background="@drawable/shadow" />

    <TableLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:divider="@drawable/keyboard_divider"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <TableRow style="@style/keyboard_row">

            <TextView
                android:id="@+id/t9_key_1"
                style="@style/keyboard_number_button"
                android:text="@string/number_one" />

            <TextView
                android:id="@+id/t9_key_2"
                style="@style/keyboard_number_button"
                android:text="@string/number_two" />

            <TextView
                android:id="@+id/t9_key_3"
                style="@style/keyboard_number_button"
                android:text="@string/number_three" />
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <TextView
                android:id="@+id/t9_key_4"
                style="@style/keyboard_number_button"
                android:text="@string/number_four" />

            <TextView
                android:id="@+id/t9_key_5"
                style="@style/keyboard_number_button"
                android:text="@string/number_five" />

            <TextView
                android:id="@+id/t9_key_6"
                style="@style/keyboard_number_button"
                android:text="@string/number_six" />
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <TextView
                android:id="@+id/t9_key_7"
                style="@style/keyboard_number_button"
                android:text="@string/number_seven" />

            <TextView
                android:id="@+id/t9_key_8"
                style="@style/keyboard_number_button"
                android:text="@string/number_eight" />

            <TextView
                android:id="@+id/t9_key_9"
                style="@style/keyboard_number_button"
                android:text="@string/number_nine" />
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <ImageView
                android:id="@+id/t9_key_backspace"
                style="@style/keyboard_clear_button"
                android:src="@drawable/backspace"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/t9_key_0"
                style="@style/keyboard_number_button"
                android:paddingBottom="5dp"
                android:text="@string/number_zero" />

            <TextView
                android:id="@+id/t9_key_dot"
                style="@style/keyboard_button"
                android:paddingBottom="12dp"
                android:text="@string/btn_dot"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
    </TableLayout>
</LinearLayout>